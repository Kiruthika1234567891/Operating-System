#include <stdio.h>
#include <stdlib.h>

int main() {
    int req[50], n, head, size, i, j, temp;
    int total = 0, cur;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    printf("Enter request sequence: ");
    for (i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size: ");
    scanf("%d", &size);

    for (i = 0; i < n; i++)
        for (j = i + 1; j < n; j++)
            if (req[i] > req[j]) {
                temp = req[i];
                req[i] = req[j];
                req[j] = temp;
            }

    int pos = 0;
    for (i = 0; i < n; i++)
        if (head < req[i]) {
            pos = i;
            break;
        }

    cur = head;

    printf("\nC-SCAN Order:\n");

    for (i = pos; i < n; i++) {
        printf("%d -> ", req[i]);
        total += abs(req[i] - cur);
        cur = req[i];
    }

    total += abs((size - 1) - cur);
    cur = 0;

    printf("%d -> ", size - 1);
    printf("%d -> ", cur);

    total += size - 1;

    for (i = 0; i < pos; i++) {
        total += abs(req[i] - cur);
        cur = req[i];
        printf("%d -> ", req[i]);
    }

    printf("END\n");
    printf("\nTotal Head Movement = %d\n", total);

    return 0;
}
