#include <stdio.h>
#include <stdlib.h>

int main() {
    int req[100], n, head, total = 0;

    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    printf("Enter the requests sequence:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &req[i]);
    }

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("\nOrder of head movement:\n");
    printf("%d", head);

    for (int i = 0; i < n; i++) {
        total += abs(req[i] - head);
        head = req[i];
        printf(" -> %d", head);
    }

    printf("\n\nTotal head movement = %d cylinders\n", total);

    return 0;
}
