#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <unistd.h>
#include <string.h>

int main() {
    int shmid;
    char *shm;
    key_t key = 1234;

    shmid = shmget(key, 1024, 0666 | IPC_CREAT);
    shm = shmat(shmid, NULL, 0);

    if (fork() == 0) {
        sleep(1);
        printf("Child Process Read: %s\n", shm);
    } else {
        strcpy(shm, "Hello from Parent using Shared Memory");
        wait(NULL);
    }

    shmdt(shm);
    shmctl(shmid, IPC_RMID, NULL);

    return 0;
}
