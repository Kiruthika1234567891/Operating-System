#include <stdio.h>

int main() {
    int nb, np, i, j, choice;

    printf("Enter number of memory blocks: ");
    scanf("%d", &nb);
    int block[nb], tempBlock[nb];

    printf("Enter block sizes:\n");
    for (i = 0; i < nb; i++)
        scanf("%d", &block[i]);

    printf("Enter number of processes: ");
    scanf("%d", &np);
    int process[np];

    printf("Enter process sizes:\n");
    for (i = 0; i < np; i++)
        scanf("%d", &process[i]);

    printf("\n1. First Fit\n2. Best Fit\n3. Worst Fit\nEnter choice: ");
    scanf("%d", &choice);

    for (i = 0; i < nb; i++)
        tempBlock[i] = block[i];

    int allocation[np];
    for (i = 0; i < np; i++)
        allocation[i] = -1;

    if (choice == 1) {
        for (i = 0; i < np; i++) {
            for (j = 0; j < nb; j++) {
                if (tempBlock[j] >= process[i]) {
                    allocation[i] = j;
                    tempBlock[j] -= process[i];
                    break;
                }
            }
        }
    }

    else if (choice == 2) {
        for (i = 0; i < np; i++) {
            int best = -1;
            for (j = 0; j < nb; j++) {
                if (tempBlock[j] >= process[i]) {
                    if (best == -1 || tempBlock[j] < tempBlock[best])
                        best = j;
                }
            }
            if (best != -1) {
                allocation[i] = best;
                tempBlock[best] -= process[i];
            }
        }
    }

    else if (choice == 3) {
        for (i = 0; i < np; i++) {
            int worst = -1;
            for (j = 0; j < nb; j++) {
                if (tempBlock[j] >= process[i]) {
                    if (worst == -1 || tempBlock[j] > tempBlock[worst])
                        worst = j;
                }
            }
            if (worst != -1) {
                allocation[i] = worst;
                tempBlock[worst] -= process[i];
            }
        }
    }

    printf("\nProcess\tSize\tBlock Allocated\n");
    for (i = 0; i < np; i++) {
        if (allocation[i] != -1)
            printf("P%d\t%d\tB%d\n", i+1, process[i], allocation[i]+1);
        else
            printf("P%d\t%d\tNot Allocated\n", i+1, process[i]);
    }

    return 0;
}
