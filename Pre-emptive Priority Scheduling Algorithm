#include <stdio.h>

int main() {
    int n, i, t = 0, completed = 0;
    int bt[20], pr[20], rem[20], p[20];
    int wt[20], tat[20], finish[20];
    int smallest;
    
    printf("Enter number of processes: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("P%d Burst Time: ", i+1);
        scanf("%d", &bt[i]);
        printf("P%d Priority: ", i+1);
        scanf("%d", &pr[i]);
        rem[i] = bt[i];
        p[i] = i + 1;
    }

    for (i = 0; i < n; i++)
        finish[i] = 0;

    while (completed != n) {
        smallest = -1;
        for (i = 0; i < n; i++) {
            if (rem[i] > 0 && finish[i] == 0) {
                if (smallest == -1 || pr[i] > pr[smallest])
                    smallest = i;
            }
        }

        rem[smallest]--;
        t++;

        if (rem[smallest] == 0) {
            finish[smallest] = t;
            completed++;
        }
    }

    for (i = 0; i < n; i++) {
        tat[i] = finish[i];
        wt[i] = tat[i] - bt[i];
    }

    printf("\nProcess\tBT\tPR\tWT\tTAT\n");
    float avg_wt = 0, avg_tat = 0;

    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\n", p[i], bt[i], pr[i], wt[i], tat[i]);
        avg_wt += wt[i];
        avg_tat += tat[i];
    }

    printf("\nAverage Waiting Time = %.2f", avg_wt / n);
    printf("\nAverage Turnaround Time = %.2f\n", avg_tat / n);

    return 0;
}
