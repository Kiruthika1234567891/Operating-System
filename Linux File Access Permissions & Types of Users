#include <stdio.h>
#include <sys/stat.h>
#include <pwd.h>
#include <grp.h>
#include <time.h>
#include <dirent.h>
#include <string.h>
#include <unistd.h>

void perms(mode_t m, char *s) {
    s[0] = S_ISDIR(m) ? 'd' : S_ISLNK(m) ? 'l' : '-';
    s[1] = (m & S_IRUSR) ? 'r' : '-';
    s[2] = (m & S_IWUSR) ? 'w' : '-';
    s[3] = (m & S_IXUSR) ? 'x' : '-';
    s[4] = (m & S_IRGRP) ? 'r' : '-';
    s[5] = (m & S_IWGRP) ? 'w' : '-';
    s[6] = (m & S_IXGRP) ? 'x' : '-';
    s[7] = (m & S_IROTH) ? 'r' : '-';
    s[8] = (m & S_IWOTH) ? 'w' : '-';
    s[9] = (m & S_IXOTH) ? 'x' : '-';
    s[10] = '\0';
}

int main(int argc, char *argv[]) {
    DIR *d;
    struct dirent *de;
    char *path = ".";
    if (argc > 1) path = argv[1];
    d = opendir(path);
    if (!d) return 1;
    printf("Permissions  Owner(uid)      Group(gid)      Size     Modified Time          Name\n");
    printf("-------------------------------------------------------------------------------------\n");
    while ((de = readdir(d)) != NULL) {
        struct stat st;
        char full[1024];
        if (strcmp(path, ".") == 0) snprintf(full, sizeof(full), "%s", de->d_name);
        else snprintf(full, sizeof(full), "%s/%s", path, de->d_name);
        if (lstat(full, &st) == -1) continue;
        char p[11];
        perms(st.st_mode, p);
        struct passwd *pw = getpwuid(st.st_uid);
        struct group *gr = getgrgid(st.st_gid);
        char timebuf[64];
        struct tm *tm = localtime(&st.st_mtime);
        strftime(timebuf, sizeof(timebuf), "%Y-%m-%d %H:%M:%S", tm);
        printf("%-11s  %-14s  %-14s  %-7lld  %-20s  %s\n",
               p,
               pw ? pw->pw_name : "unknown",
               gr ? gr->gr_name : "unknown",
               (long long)st.st_size,
               timebuf,
               de->d_name);
    }
    closedir(d);
    return 0;
}
