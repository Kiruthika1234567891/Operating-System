#include <stdio.h>
#include <stdlib.h>

int main() {
    int req[50], n, head, i, j, temp;
    int dir, size;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    printf("Enter request sequence: ");
    for (i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size: ");
    scanf("%d", &size);

    printf("Enter direction (1 = high, 0 = low): ");
    scanf("%d", &dir);

    for (i = 0; i < n; i++)
        for (j = i + 1; j < n; j++)
            if (req[i] > req[j]) {
                temp = req[i];
                req[i] = req[j];
                req[j] = temp;
            }

    int pos = 0;
    for (i = 0; i < n; i++)
        if (head < req[i]) {
            pos = i;
            break;
        }

    int total = 0, cur = head;

    printf("\nSCAN Order:\n");

    if (dir == 1) {
        for (i = pos; i < n; i++) {
            printf("%d -> ", req[i]);
            total += abs(req[i] - cur);
            cur = req[i];
        }
        total += abs((size - 1) - cur);
        cur = size - 1;
        printf("%d -> ", cur);

        for (i = pos - 1; i >= 0; i--) {
            total += abs(req[i] - cur);
            cur = req[i];
            printf("%d -> ", req[i]);
        }
    } else {
        for (i = pos - 1; i >= 0; i--) {
            printf("%d -> ", req[i]);
            total += abs(req[i] - cur);
            cur = req[i];
        }
        total += abs(cur - 0);
        cur = 0;
        printf("%d -> ", cur);

        for (i = pos; i < n; i++) {
            total += abs(req[i] - cur);
            cur = req[i];
            printf("%d -> ", req[i]);
        }
    }

    printf("END\n
