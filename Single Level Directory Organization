#include <stdio.h>
#include <string.h>

struct {
    char dirname[20];
    char fname[20][20];
    int filecount;
} dir;

int main() {
    int choice, i;
    char name[20];

    printf("Enter Directory Name: ");
    scanf("%s", dir.dirname);
    dir.filecount = 0;

    while (1) {
        printf("\n1. Create File\n2. Delete File\n3. Search File\n4. Display Directory\n5. Exit\nEnter choice: ");
        scanf("%d", &choice);

        if (choice == 1) {
            printf("Enter file name: ");
            scanf("%s", dir.fname[dir.filecount]);
            dir.filecount++;
            printf("File created.\n");
        }

        else if (choice == 2) {
            printf("Enter file name to delete: ");
            scanf("%s", name);
            int found = 0;
            for (i = 0; i < dir.filecount; i++) {
                if (strcmp(name, dir.fname[i]) == 0) {
                    found = 1;
                    strcpy(dir.fname[i], dir.fname[dir.filecount - 1]);
                    dir.filecount--;
                    printf("File deleted.\n");
                    break;
                }
            }
            if (!found)
                printf("File not found.\n");
        }

        else if (choice == 3) {
            printf("Enter file name to search: ");
            scanf("%s", name);
            int found = 0;
            for (i = 0; i < dir.filecount; i++) {
                if (strcmp(name, dir.fname[i]) == 0) {
                    found = 1;
                    printf("File found.\n");
                    break;
                }
            }
            if (!found)
                printf("File not found.\n");
        }

        else if (choice == 4) {
            printf("\nDirectory: %s\n", dir.dirname);
            for (i = 0; i < dir.filecount; i++)
                printf("%s\n", dir.fname[i]);
        }

        else if (choice == 5) {
            break;
        }
    }

    return 0;
}
