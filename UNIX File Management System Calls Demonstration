#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    int fd;
    char buffer[100];
    int n;

    fd = open("sample.txt", O_CREAT | O_RDWR, 0644);

    write(fd, "Hello UNIX System Calls\n", 24);

    lseek(fd, 0, SEEK_SET);

    n = read(fd, buffer, sizeof(buffer));
    buffer[n] = '\0';

    printf("Content: %s", buffer);

    close(fd);

    return 0;
}
